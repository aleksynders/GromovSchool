<Window x:Class="GromovSchool.LogAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GromovSchool"
        Icon="resources\school_logo.ico"
        mc:Ignorable="d" FontFamily="Comic Sans MS" WindowStartupLocation="CenterScreen"
        Title="Авторизация под Админом" Height="400" Width="700" MinHeight="400" MinWidth="700" MaxHeight="400" MaxWidth="700">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите код администратора" Margin="5" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold"/>
            <TextBox x:Name="tbKodAdmin" Width="100" Margin="5" MaxLength="4" TextAlignment="Center" FontSize="20"/>
            <TextBlock Style="{StaticResource tbLoginAdmin}" Margin="0" Text="Войти" Width="125" FontSize="20" TextAlignment="Center" MouseDown="TextBlock_MouseDown"/>
        </StackPanel>
    </Grid>
</Window>
